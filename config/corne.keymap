#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    combos {
        compatible = "zmk,combos";

        semicolon {
            bindings = <&kp SEMICOLON>;
            key-positions = <33 34>;
            layers = <0>;
        };

        caps_lock {
            bindings = <&kp CAPSLOCK>;
            key-positions = <40 21>;
            layers = <0>;
        };

        num_pad_right_layer {
            bindings = <&tog 2>;
            key-positions = <14 15 16>;
        };

        num_pad_left_layer {
            bindings = <&tog 3>;
            key-positions = <19 20 21>;
        };

        settings_layer {
            bindings = <&tog 4>;
            key-positions = <1 2 3 4>;
        };

        symbols_layer {
            bindings = <&tog 5>;
            key-positions = <31 32 33>;
        };

        shortcuts_layer {
            bindings = <&tog 6>;
            key-positions = <27 28 26>;
        };

        num_pad_right_layer_Lhand {
            bindings = <&tog 3>;
            key-positions = <14 3 16>;
        };

        num_pad_left_layer_Rhand {
            bindings = <&tog 2>;
            key-positions = <19 8 21>;
        };

        default_layer {
            bindings = <&to 0>;
            key-positions = <38 39>;
        };

        symbols_layer_sticky {
            bindings = <&sl 5>;
            key-positions = <31 33>;
        };

        dot_left {
            bindings = <&kp PERIOD>;
            key-positions = <27 28>;
            layers = <2>;
        };

        dot_right {
            bindings = <&kp PERIOD>;
            key-positions = <31 32>;
            layers = <3>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        DEFAULT_LAYER {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB     &kp Q  &kp W  &kp E             &kp R         &kp T          &kp Y        &kp U           &kp I         &kp O    &kp P     &kp BSPC
&kp ESCAPE  &kp A  &kp S  &kp D             &kp F         &kp G          &kp H        &kp J           &kp K         &kp L    &kp SQT   &kp LEFT_PARENTHESIS
&kp DELETE  &kp Z  &kp X  &kp C             &kp V         &kp B          &kp N        &kp M           &kp COMMA     &kp DOT  &kp FSLH  &kp RIGHT_PARENTHESIS
                          &kp LEFT_CONTROL  &kp LEFT_WIN  &lt 1 SPACE    &lt 3 ENTER  &kp LEFT_SHIFT  &kp LEFT_ALT
            >;
        };

        FUNCTION_KEYS {
            bindings = <
&none  &kp F1        &kp F3             &kp F4            &kp F5            &kp F8    &none         &kp F7  &kp F8  &kp F9  &kp F12  &none
&none  &sk LEFT_ALT  &sk LEFT_WIN       &sk LEFT_CONTROL  &sk LEFT_SHIFT    &none     &none         &kp F4  &kp F5  &kp F6  &kp F11  &none
&none  &kp C_MUTE    &kp C_VOLUME_DOWN  &kp C_VOLUME_UP   &kp C_PLAY_PAUSE  &none     &none         &kp F1  &kp F2  &kp F3  &kp F10  &none
                                        &none             &none             &none     &kp LEFT_ALT  &none   &none
            >;
        };

        NUM_PAD_LEFT {
            bindings = <
&none  &kp LEFT_PARENTHESIS   &kp N7  &kp N8  &kp N9        &kp SLASH      &kp PAGE_UP    &kp HOME        &kp UP_ARROW    &kp END          &none  &none
&none  &kp BACKSPACE          &kp N4  &kp N5  &kp N6        &kp MINUS      &kp PAGE_DOWN  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &none  &none
&none  &kp RIGHT_PARENTHESIS  &kp N1  &kp N2  &kp N3        &kp PLUS       &kp HOME       &kp END         &kp BACKSPACE   &kp DELETE       &none  &none
                                      &kp N0  &kp ASTERISK  &lt 3 ENTER    &none          &kp LEFT_SHIFT  &none
            >;
        };

        NUM_PAD_RIGHT {
            bindings = <
&none  &none  &kp HOME       &kp UP      &kp END         &kp PAGE_UP           &kp SLASH    &kp N7        &kp N8  &kp N9  &kp LEFT_PARENTHESIS   &none
&none  &none  &kp LEFT       &kp DOWN    &kp RIGHT       &kp PAGE_DOWN         &kp MINUS    &kp N4        &kp N5  &kp N6  &kp BACKSPACE          &none
&none  &none  &kp BACKSPACE  &kp DELETE  &kp HOME        &kp END               &kp PLUS     &kp N1        &kp N2  &kp N3  &kp RIGHT_PARENTHESIS  &none
                             &kp RCTRL   &kp LEFT_SHIFT  &kp LC(LEFT_SHIFT)    &lt 2 ENTER  &kp ASTERISK  &kp N0
            >;
        };

        SETTINGS {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp TAB     &none         &none         &none         &none         &ext_power EP_TOG    &none            &none            &none            &none            &none            &kp BSPC
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4         &none            &bl BL_DEC       &bl BL_INC       &bl BL_TOG       &none            &none
&kp LSHFT   &none         &none         &none         &none         &none                &rgb_ug RGB_EFF  &rgb_ug RGB_BRD  &rgb_ug RGB_BRI  &rgb_ug RGB_TOG  &rgb_ug RGB_EFR  &none
                                        &kp LGUI      &none         &kp SPACE            &kp RET          &none            &kp RALT
            >;
        };

        SYMBOLS {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp TAB    &kp EXCL  &kp AT  &kp DOLLAR  &kp POUND  &kp PRCNT    &kp CARET  &kp AMPS   &kp ASTRK  &kp LPAR  &kp RPAR  &kp BSPC
&kp LCTRL  &none     &none   &none       &none      &none        &kp MINUS  &kp EQUAL  &kp LBKT   &kp RBKT  &kp BSLH  &kp GRAVE
&kp LSHFT  &none     &none   &none       &none      &none        &kp UNDER  &kp PLUS   &kp LBRC   &kp RBRC  &kp PIPE  &kp TILDE
                             &kp LGUI    &none      &kp SPACE    &kp RET    &none      &kp RALT
            >;
        };

        SHORTCUT_LAYER {
            bindings = <
&kp LG(A)  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none      &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none      &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
                         &none  &none  &none    &none  &none  &none
            >;
        };

        NAVIGATION_LAYER {
            bindings = <
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
&none  &none  &none  &none  &none  &none    &none  &none  &none  &none  &none  &none
                     &none  &none  &none    &none  &none  &none
            >;
        };
    };
};
